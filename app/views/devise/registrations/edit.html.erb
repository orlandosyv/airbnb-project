<div class="container py-5 px-0">
  <div class="container bg-white p-5 w-50 rounded">
    <h2><strong>Datos de tu cuenta</strong></h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :nickname, required: true, disabled: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <h2 class="border-bottom pb-2 mt-5"><strong>Cambio de contraseña</strong></h2>

        <%= f.input :password,
                    required: false,
                    label: "Nueva contraseña",
                    input_html: { autocomplete: "new-password" } %>


        <%= f.input :password_confirmation,
                    required: false,
                    label: "Confirmacion de contraseña",
                    input_html: { autocomplete: "new-password" } %>

        <%= f.input :current_password,
                    label: "Contraseña actual",
                    hint: "Ingresa tu contraseña para guardar cualquier cambio",
                    error: "Tienes que escribir tu contraseña para poder actualizar los datos",
                    required: true,
                    input_html: { autocomplete: "current-password" } %>
      </div>

      <div class="d-flex justify-content-center form-actions">
        <%= f.button :submit, "Actualizar datos", class: "btn btn-dark mt-5 btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
