<div class="container py-5">

  <div class="container p-5 bg-white w-50 text-center ">
    <h3> <strong> Forgot your password? </strong> </h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
      </div>

      <div class="form-actions btn btn-secondary">
        <%= f.button :submit, "Send me reset password", class: "text-white" %>
      </div>
    <% end %>

    <div class="container pt-3 px-0 mb-0 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
