<div class="container py-5 px-0">
  <div class="container bg-white p-5 w-50 rounded">
    <h2> <strong>Iniciar sesion</strong> </h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    label: "Contraseña",
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: "Recuerdame", as: :boolean if devise_mapping.rememberable? %>
      </div>

        <div class="form-actions btn btn-secondary">
          <%= f.button :submit, "Iniciar sesión", class: "text-white" %>
        </div>
        <div class="container pt-3 px-0 mb-0">
          <%= render "devise/shared/links" %>
        </div>
    <% end %>
  </div>
</div>
