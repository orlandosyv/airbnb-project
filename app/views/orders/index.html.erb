<div class="container p-5">

  <div class="text-center mb-5" >
    <h3 class="text-secondary"> <strong> Mis compras </strong> </h3>
  </div>

  <div class="container-cards">
    <% @orders.each do |order| %>
    <div class="card-product">
      <%= cl_image_tag order.product.photo.key, alt: "foto de producto", class: "img-order" %>
      <div class="card-product-infos w-100">
        <h2>Producto : <%= order.product.name.capitalize %></h2>
        <p>Fecha de compra: <%= order.created_at.localtime.strftime("%d/%m/%Y %I:%M %p") %></p>
        <p>Direccion de envio: <%= order.address %></p>
        <p>Metodo de pago: <%= order.pay_method %></p>
        <% if order.reviewed %>
          <p id="review-item" class="font-weight-bold">Review completo</p>
        <% else %>
          <p id="review-item2" class="badge badge-info"><%= link_to "Dejar Review", new_order_review_path(order) %></p>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="text-right mt-5"><%= link_to "Cambios y Devoluciones", refund_path %></div>
</div>
