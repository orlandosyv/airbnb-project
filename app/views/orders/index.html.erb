<div class="container">
  <h1>Mis compras</h1>
  <% @orders.each do |order| %>
    <div class="card p-3">
      <div class="card-title">
        <%= order.product.name %>
      </div>
      <div class="card-body">
        <div>Fecha de compra: <%= order.created_at.localtime.strftime("%d/%m/%Y %I:%M %p") %></div>
        <div><%= link_to "Dejar Review", new_order_review_path(order) %></div>
      </div>
    </div>
  <% end %>
</div>
